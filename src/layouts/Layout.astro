---
interface Props {
  title: string
  showNewsletter?: boolean
}

const { title, showNewsletter = false } = Astro.props

import '@fontsource-variable/inter'
import NavComponent from '@/components/NavComponent.astro'
import NewsletterSection from '@/components/NewsletterSection.astro'
import { ViewTransitions } from 'astro:transitions'
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Christian Mendez Official Website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Christian Mendez</title>
    <ViewTransitions />

    <script src="@/scripts/initialize-theme.ts"></script>
  </head>
  <body
    class="font-sans text-lg text-gray-800 antialiased dark:bg-slate-900 min-h-screen flex flex-col"
  >
    <NavComponent />

    <slot />

    {showNewsletter && <NewsletterSection />}

    <footer
      class:list={[
        'bg-indigo-700 text-base text-gray-100',
        { 'mt-auto': !showNewsletter },
      ]}
    >
      <div
        class="container mx-auto flex flex-col sm:flex-row items-center justify-between py-8 px-0 sm:px-4"
      >
        <div class="text-sm">
          Copyright {new Date().getFullYear()}. View source on <a
            href="https://github.com/chrismendez11/astro-portfolio-starter"
            target="_blank"
            class="underline hover:text-gray-400">GitHub</a
